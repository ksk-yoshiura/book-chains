<div class="card">
  
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <a class="nav-link active" href="#">MyChains</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">MyBookShelf</a>
      </li>
    </ul>
  </div>

    <div class="card-group w-75">
      <% @books.each do |book| %>
        <div class="card" style="min-width:20%; max-width:20%">
          <img class="card-img-top" src="<%= book.image %>" alt="">
            <div class="card-body">
              <h4 class="card-title"><%= book.title %></h4>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><p>著者 : <%= book.author %></P></li>
                <li class="list-group-item"><p>登録日 : <%= book.created_at.strftime("%Y-%m-%d %H:%M") %></P></li>
              </ul>
            </div>
        </div>
      <% end %>
    </div> 





