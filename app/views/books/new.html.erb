
<div class="container text-center">
<h4>RegisterNewBook</h4>

<%= form_tag("/users/#{current_user.id}/books", method: :post) do %>
  <div class="form-group row">
    <label for="inputTitle" class="col-sm-2 col-form-label">Title</label>
      <div class="col-sm-10">
        <input type="string" name="title" class="form-control" id="inputTitle" placeholder="title">
      </div>
  </div>

  <div class="form-group row">  
    <label for="inputAuthor" class="col-sm-2 col-form-label">Author</label>
      <div class="col-sm-10">
        <input type="string" name="author" class="form-control" id="inputAuthor" placeholder="author">
      </div>
  </div>

  <div class="form-group row"> 
    <label for="inputCoverDesign" class="col-sm-2 col-form-label">Image</label>
      <div class="col-sm-10">
        <input type="text" name="image" class="form-control" id="inputAuthor" placeholder="image URL">
      </div>
  </div>

  <div class="form-group row"> 
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">SENT</button>
    </div>
  </div>
<% end %>

</div>